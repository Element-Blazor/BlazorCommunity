@inherits MainLayoutBase
<BPopup></BPopup>
<BLayout EnableAlwaysRender="true" NorthHeight="80">
    <North>
        <AppHeader EnableAlwaysRender="true"></AppHeader>
    </North>
    <Center>
        <div class="main-layout-center">
            <BCard Shadow="@ShadowShowType.Never" Style="border:none;" EnableAlwaysRender="true">
                <Body>
                    @Body
                </Body>
            </BCard>
        </div>
    </Center>

    <South>
        <AppFooter></AppFooter>
    </South>
</BLayout>
<CascadingValue Value="@this">
    @ChildContent
</CascadingValue>

