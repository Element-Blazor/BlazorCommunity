@using BlazorCommunity.DTO.Admin
@inherits NewClaimBase

    <BForm Style="width:100%;" @ref="claimForm" Value="model" LabelAlign="@LabelAlign.Right" EnableAlwaysRender="true">
        <BFormItem TValue="string" Label="RoleId" Name="@nameof(RoleClaimDto.RoleId)" EnableAlwaysRender="true">
            <BInput TValue="string"  EnableAlwaysRender="true" IsDisabled="true"></BInput>
        </BFormItem>

        <BFormItem TValue="string" Label="ClaimType" Name="@nameof(RoleClaimDto.ClaimType)" IsRequired="true" EnableAlwaysRender="true">
            <BInput IsClearable="true" TValue="string" EnableAlwaysRender="true"></BInput>
        </BFormItem>
        <BFormItem TValue="string" Label="ClaimValue" Name="@nameof(RoleClaimDto.ClaimValue)" IsRequired="true" EnableAlwaysRender="true">
            <BInput IsClearable="true" TValue="string" EnableAlwaysRender="true"></BInput>
        </BFormItem>
        <BFormItem TValue="object" Style="text-align:center;margin:0 auto;">
            <BButton Type="@ButtonType.Primary" IsPlain="true" OnClick="e=>Save()" Style="text-align:center;width:100px;">保存</BButton>
            <BButton Type="@ButtonType.Default" IsPlain="true" OnClick="e=>claimForm.Reset()" Style="text-align:center;width:100px;">重置</BButton>
        </BFormItem>
    </BForm>
