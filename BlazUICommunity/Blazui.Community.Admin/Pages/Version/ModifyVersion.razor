@using Blazui.Community.DTO.Admin
@inherits ModifyVersionBase

<BForm Style="width:660px;" @ref="versionForm" Value="model" LabelAlign="@LabelAlign.Right">
    <BFormItem TValue="ProjectType?" Label="项目" Name="@nameof(VersionDisplayDto.Project)" IsRequired="true">
        <BSelect TValue="ProjectType?" Value="ProjectType.Blazui">
        </BSelect>
    </BFormItem>
    <BFormItem TValue="string" Label="版本名称" Name="@nameof(VersionDisplayDto.VerName)" IsRequired="true">
         <BInput  IsClearable="true" TValue="string"></BInput>
    </BFormItem>
    <BFormItem TValue="string" Label="版本编号" Name="@nameof(VersionDisplayDto.VerNo)" IsRequired="true">
         <BInput  IsClearable="true" TValue="string"></BInput>
    </BFormItem>
    <BFormItem TValue="string" Label="Nuget包" Name="@nameof(VersionDisplayDto.VerNuget)" IsRequired="false">
         <BInput  IsClearable="true" TValue="string"></BInput>
    </BFormItem>
    <BFormItem TValue="string" Label="文档地址" Name="@nameof(VersionDisplayDto.VerDocUrl)" IsRequired="false">
         <BInput  IsClearable="true" TValue="string"></BInput>
    </BFormItem>
    <BFormItem TValue="string" Label="版本说明" Name="@nameof(VersionDisplayDto.VerDescription)" IsRequired="false">
        <BInput Type="InputType.Textarea" TValue="string"></BInput>
    </BFormItem>
    <BFormItem TValue="string" Label="组件地址" Name="@nameof(VersionDisplayDto.VerDownUrl)" IsRequired="false">
         <BInput  IsClearable="true" TValue="string"></BInput>
    </BFormItem>
    <BFormItem TValue="string" Label="ID" Name="@nameof(VersionDisplayDto.Id)" IsRequired="false" IsHidden="true">
         <BInput  IsClearable="true" TValue="string"></BInput>
    </BFormItem>
    <BFormItem TValue="DateTime" Label="DateTime" Name="@nameof(VersionDisplayDto.CreateDate)" IsRequired="false" IsHidden="true">
        <BInput TValue="DateTime"></BInput>
    </BFormItem>
    <BFormItem TValue="object" Style="text-align:center;margin:0 auto;">
        <BButton Type="@ButtonType.Primary" IsPlain="true" OnClick="e=>Save()" Style="text-align:center;width:100px;">保存</BButton>
        <BButton Type="@ButtonType.Default" IsPlain="true" OnClick="e=>versionForm.Reset()" Style="text-align:center;width:100px;">重置</BButton>
    </BFormItem>
</BForm>
