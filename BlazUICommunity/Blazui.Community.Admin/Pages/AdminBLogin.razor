@inherits AdminLoginBase
<div class="login-container">
    <BForm @ref="Form" >
        <div class="title-container">
            <h3 class="title">
                社区后台系统登录
            </h3>
        </div>
        <BFormItem IsRequired="true" TValue="string" RequiredMessage="请输入账号" Name="@nameof(LoginInfoModel.Username)">
            <BInput PrefixIcon="el-icon-user-solid" TValue="string" Placeholder="账号"></BInput>
        </BFormItem>
        <BFormItem IsRequired="true" TValue="string" RequiredMessage="请输入密码" Name="@nameof(LoginInfoModel.Password)" EnableAlwaysRender="true">
            <BInput PrefixIcon="el-icon-lock" SuffixIcon="el-icon-view" OnSuffixIconClick="TogglePassword" Type="@passwordType" TValue="string" Placeholder="密码" ></BInput>
        </BFormItem>
        <BFormActionItem>
            <BButton Type="@ButtonType.Primary" OnClick="LoginAsync" Style="width:100%;">登录</BButton>
        </BFormActionItem>
    </BForm>

</div>