@inherits ReplyListBase

@if (Replys != null && Replys.Any())
{
    foreach (var reply in Replys)
    {
        <ReplyItem ReplyModel="reply" EnableAlwaysRender="true" DeleteReply="e=>DeleteRep(reply.Id)" > </ReplyItem>
    }
    <div class="el-table__column-resize-proxy" style="display: none;"></div>
    @if (Math.Ceiling((float)Total / PageSize) > 1 || !NoPaginationOnSinglePage)
    {
        <div class="topic-pagination">
            <BPagination Total="Total" ShowPageCount="ShowPageCount" PageSize="PageSize" CurrentPageChanged="CurrentPageChangedAsync" @ref="Bpagination"></BPagination>
        </div>
    }
}
else
{
    <div class="el-table__empty-block" style="height:60px;">
        <span class="el-table__empty-text">
            消灭零回复
        </span>
    </div>
}
