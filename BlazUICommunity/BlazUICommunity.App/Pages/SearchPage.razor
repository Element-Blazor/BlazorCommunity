@inherits SearchPageBase
@page "/search/{Text}"

<div class="container">
    <BLayout EastWidth="350" EnableAlwaysRender="true">
        <Center>
            <BTab TabPosition="@TabPosition.Top" EnableAlwaysRender="true" Style="margin-top:-4px;">
                <GoHome></GoHome>
                <BTabPanel Title="" Style="margin-top:-5px;">
                    <SeachTopicContainer Datas="Datas" Total="@Total" currentPage="currentPage" PageSize="PageSize" OnItemClick="OnItemClick" CurrentPageChanged="LoadDatas" EnableAlwaysRender="true" AskQuestion="e=>Ask()">
                    </SeachTopicContainer>
                </BTabPanel>
            </BTab>

        </Center>
        <East>
            <AppRightLayout Style="margin-top:9px !important;"></AppRightLayout>
        </East>
    </BLayout>
</div>
